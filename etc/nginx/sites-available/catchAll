http {
  index index.html;
 
  server {
    listen 80 default_server;
    listen [::]:80 default_server;
    listen 443 default_server;
    listen [::]:443 default_server;
    
    server_name *.{{domain}};
    root /var/www/html/*.{{domain}};
    
    access_log /var/log/nginx/access/default.log main;
    server_name_in_redirect off;
  }
}
